package com.bridglabz.basicjavaSecA;

public class FactorialUsingRecurssion {
		int fact=1;
	public static void main(String[] args) {
		int no =5;
		Factorial f=new Factorial();
		f.calcFact(no);
	}
	
		int calcFact(int no)
		{
			if (no>1)
			{
				fact=fact*no;
				calcFact(no-1);
			}
			return fact;
	}
	

}
