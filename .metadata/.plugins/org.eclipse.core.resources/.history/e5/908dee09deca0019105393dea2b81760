
package com.bridglabz.datastructures3;

import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;

import com.bridglabz.utility.*;;

public class UnOrderedList 
{

	public static <T> void main(String args[]) throws IOException 
	{
		System.out.println("Reading file data.");
		try(BufferedReader bufferedReader = new BufferedReader(new FileReader
				("/"))) 
		{
			String stringWithFileData = "";
			String line = bufferedReader.readLine();
			while(line != null)
			{
				stringWithFileData+=line+" ";
				line = bufferedReader.readLine();
			}
			
			// Data receieved, now storing it into sring array.
			String[] array = stringWithFileData.trim().split("\\s+"); 
			LinkedList1<T> linkedList = new LinkedList1<T>();
			for(int i=0; i<array.length; i++)
			{
				linkedList.append(array[i]);
				//System.out.println(array[i]);
			}
			
			// Searching for the string if present or not.
			System.out.println("Enter an input to search for a text.");
			//Object object = "String";
			String searchString = Utility.StringInput();
			boolean isStringPresent = linkedList.search(searchString);
			if(isStringPresent)
			{
				System.out.println("TSring is found & deleted .");
				linkedList.remove(searchString);
				linkedList.printList();
				linkedList.writeDataToFile();
//				linkedList.append(searchString);
//				linkedList.printList();
			}
			else
			{
				System.out.println("string is not found & added");
				linkedList.append(searchString);
				linkedList.printList();
				linkedList.writeDataToFile();
				linkedList.remove(searchString);
				linkedList.printList();
			}
			
		}
		catch
		(Exception e) 
		{
			System.out.println(e);
		}
	
		//		 Code for testing
//		LinkedList1<T> linkedList = new LinkedList1<T>();
//		linkedList.append("cat");
//		linkedList.insertAtStart("mat");
//		linkedList.insertAtStart("sat");
//		linkedList.append("fat");
//		linkedList.append("bat");
//		
//		System.out.println("is bat present "+linkedList.search("bat"));
//		linkedList.printList();
//		linkedList.remove("mat");
//		linkedList.printList();
//		linkedList.remove("bat");
//		linkedList.printList();
//		linkedList.remove("sat");
//		linkedList.printList();
	}
}    
