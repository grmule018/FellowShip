import com.bridglabz.oops.Utility;
import com.bridglabz.utility.*;
public class Regex
{
	public static void main(String args[])
	{
		
		UserDetails user=new UserDetails();
		System.out.println();
	
		//asking user to enter his data
		System.out.println("Enter FirstName:");
		user.setfName(com.bridglabz.utility.Utility.StringInput());
		System.out.println();
	
		System.out.println("Enter LastName:");
		user.setlName(com.bridglabz.utility.Utility.StringInput());
		System.out.println();
	
		System.out.println("Enter Mobile Number:");
		user.setmobileNo(com.bridglabz.utility.Utility.StringInput());
		System.out.println();	
		
		//Setting current date
		user.setdate(com.bridglabz.utility.Utility.getFormatedDate(new Date()));
		System.out.println(com.bridglabz.utility.Utility.convertString(user,com.bridglabz.utility.Utility.getFileText("/home/user/Downloads/RELEASE/GaneshM/src/com/bridglabz/oops/newfile.txt")));	
	}
}
