/******************************************************************************
 *  Purpose: To find the prime numbers in the range of 0 to 1000 and store the
 *           the numbers in a 2D array.
 *
 *  @author  MarkF
 *  @version 1.0
 *  @since   27-08-2019
 *
 ******************************************************************************/
package com.bridgelabz.dataStructures;

import com.bridgelabz.Utility.Utility2;

public class PrimeNumbersIn2DArray {
	
    // A 2D to hold the prime numbers in the specific range.
	static int[][] mainArray = new int[10][25];
    
	public static void main(String[] args) {
		int[][] primeArray = primeArray2D();
		System.out.println("Printing the arrays in specific ranges");
        for(int i=0; i<primeArray.length; i++)
        {
        	for(int j=0; j<primeArray[i].length; j++)
            {
        		if(primeArray[i][j]!=0)
        		{
        			System.out.print(primeArray[i][j]+" ");
        		}   	
            }
        	System.out.println();
        }
		
	}
	
	/**purpose: Providing logic to check if prime number, then 
	 *          putting in a specific slot of ranges provided.
	 * 
	 * @return an 2D array in the specific range. 
	 */
	public static int[][] primeArray2D()
	{
		int one=0,two=0,three=0,four=0,five=0;
		int six=0,seven=0,eight=0,nine=0,ten=0;
	
		for(int i = 0; i < 1000; i++)
		{
			if(Utility2.isPrime(i))
			{
				if(i>=0&&i<=100)
				{
					mainArray[0][one++]=i;
				}
				else if(i>=101&&i<=200)
				{
					mainArray[1][two++]=i;
				}
				else if(i>=201&&i<=300)
				{
					mainArray[2][three++]=i;
				}
				else if(i>=301&&i<=400)
				{
					mainArray[3][four++]=i;
				}
				else if(i>=401&&i<=500)
				{
					mainArray[4][five++]=i;
				}
				else if(i>=501&&i<=600)
				{
					mainArray[5][six++]=i;
				}
				else if(i>=601&&i<=700)
				{
					mainArray[6][seven++]=i;
				}
				else if(i>=701&&i<=800)
				{
					mainArray[7][eight++]=i;
				}
				else if(i>=801&&i<=900)
				{
					mainArray[8][nine++]=i;
				}
				else if(i>=901&&i<=1000)
				{
					mainArray[9][ten++]=i;
				}
			}
		}
		
		return mainArray;
	}

}
