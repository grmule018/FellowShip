package com.bridglabz.oops1;
import java.io.IOException;
import java.util.Scanner;
public class StockPortDemo{
	public static void main(String[]args) throws IOException {
		Scanner sc =new Scanner(System.in);
		int flag=0;
		do {
			System.out.println(("Enter\n1:Add Stock\n2:Calculate ech stock value\n3:Calculate value of total stocks\n4:Display"));
			int choice=sc.nextInt();
			switch(choice) {
			case 1:
				StockPortM.addStock();
				break;
			case 2:
				StockPortM.valueOfEachShare();
				break;
			case 3:
				
				StockPortM.valueOfTotalStock();
				break;
			case 4:
				StockPortM.displayStockdetails();
				break;
			default:
				System.out.println("Invalid Chioce");
				break;
			}
			
		}while(flag<1) ;
			
		}
	}


